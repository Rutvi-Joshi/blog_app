<%= form_for @user, html: { multipart: true } do |f| %>
  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :country %>
  <%= f.text_field :country %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :gender %>
  <%= f.select :gender, ["Male", "Female", "Other"] %>

  <%= f.submit "Update Profile" %>
<% end %>
